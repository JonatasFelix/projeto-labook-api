                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": [
                    "email",
                    "password"
                ]
            },
            "Token": {
                "type": "object",
                "tags": [
                    "User"
                ],
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            },
            "CreatePost": {
                "type": "object",
                "tags": [
                    "Post"
                ],
                "properties": {
                    "authorization": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    }
                },
                "required": [
                    "authorization",
                    "content"
                ]
            },
            "GetFeed": {
                "type": "object",
                "tags": [
                    "Post"
                ],
                "properties": {
                    "authorization": {
                        "type": "string"
                    }
                },
                "required": [
                    "authorization"
                ]
            },
            "DeletePost": {
                "type": "object",
                "tags": [
                    "Post"
                ],
                "properties": {
                    "authorization": {
                        "type": "string"
                    },
                    "postId": {
                        "type": "string"
                    }
                },
                "required": [
                    "authorization",
                    "postId"
                ]
            },
            "Post": {
                "type": "object",
                "tags": [
                    "Post"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "userId": {
                        "type": "string"
                    },
                    "userName": {
                        "type": "string"
                    }
                }
            },
            "Like": {
                "type": "object",
