                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "email",
                    "password"
                ]
            },
            "Login": {
                "type": "object",
                "tags": [
                    "User"
                ],
                "properties": {
